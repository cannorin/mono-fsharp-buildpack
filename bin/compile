#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# fail fast
set -e

FSHARP_BINARY="https://github.com/cannorin/mono-fsharp-buildpack/releases/download/0.0.1/fsharp-4.1.29.tar.gz"
curl -L $FSHARP_BINARY -s | tar zxf - -C $BUILD_DIR

